calls = 0
def count_calls():    #считает вызовы остальных функций
    global calls      #буду изменять глобальную переменную
    calls = calls + 1

def string_info(string): #принимает аргумент - строку и возвращает кортеж
    count_calls() #вызвываю первую ф-ию для подсчета вызовов
    length = len(string)
    upper_registr = string.upper()
    lower_registr = string.lower()
    return (length, upper_registr, lower_registr)

def is_contains(string, list_to_search):
    count_calls()
    string = string.lower()
    if string in list_to_search:
        print(True)
    else:
        print(False)


